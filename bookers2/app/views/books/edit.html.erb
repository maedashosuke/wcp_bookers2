<h1>Editing Book</h1>
<% if flash.now[:alert] %>
    <%= flash.now[:alert] %>
<% end %>

<% if @book.errors %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <label for="list-title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="list-body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>