<div class='body'>
 <div class='container'>

  <p id="notice"></p>

   <div class='row'>
     <div class='col-md-6 col-md-offset-3'>
       <h1>Editing Book</h1>

	 <%= form_with model: @book, local:true do |f| %>
  	  <div class="field row">
       <h4>Title</h4>
       <%= f.text_field :title, size: "78"  %>
      </div>

      <div class="field row">
       <h4>Opinion</h4>
       <%= f.text_area :body, size: "80x2" %>
      </div>

      <br>

     <div class="actions row">
      <button type="submit" class="btn btn-primary btn-block">Update Book</button>
     </div>

        <div>
	       <%= link_to "Show", book_path(@book) %> |
	       <%= link_to "Back", books_path %>
	     </div>
  <% end %>
   </div>
  </div>
 </div>