<main>
  <p id="notice">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">

            <% if @book.errors.any? %>
              <div class="alert alert-warning">
  	            <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              </div>
            <% end %>

          <h2>User info</h2>
            <% if @user == current_user %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "" %>
            <% else %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/1/edit"></a>
            </div>

            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book, local:true do |f| %>
            <form action="/books" accept-charset="UTF-8" method="post">
              <div class="form-group">
                <label for="book_title">Title</label>
                <%= f.text_field :title, size: "35" %>
              </div>
              <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body, size: "37" %>
              </div>
              <div class="form-group">
                <%= f.submit "Create Book" %>
              </div>
            <% end %>
            </form>
        </div>

            <div class="col-md-8 offset-md-1">
              <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                  <tr>
                    <td>
                      <%= link_to(user_path(@user)) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40'  %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to(book_path(book)) do %>
        	            <%= book.title %>
        	            <% end %>
                    </td>
                    <td><%= book.body %></td>
                  </tr>
                  <% end %>
                  <%= paginate @books, class: "paginate" %>
ã€€              </tbody>
              </table>
            </div>
      </div>
    </div>
  </p>
</main>