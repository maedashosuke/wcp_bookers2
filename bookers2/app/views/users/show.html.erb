<h2>User info</h2>
  <table class='table'>
    <tr>
      <% if @user == current_user %>
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <% else %>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <% end %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>

  <div class='row'>
	  <%= link_to "User info", edit_user_path(@user.id) %>
  </div>

<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
　<tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to(user_path(@user)) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40'  %>
          <% end %>
        </td>
        <td>
          <%= link_to(book_path(book)) do %>
        	<%= book.title %>
        	<% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <tr>
    <% end %>
    <%= paginate @books, class: "paginate" %>
　</tbody>
</table>

<main>
  <p id="notice">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
            <% if @user == current_user %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "" %>
            <% else %>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/1/edit"></a>
            </div>
        </div>
      </div>
    </div>
  </p>
</main>

