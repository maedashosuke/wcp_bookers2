<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render "users/error", books: @book %>
        <%= form_with model:@user, local:true do |f| %>

        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>

        <div class="form-group">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60%>
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group">
          <label class="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>
        </div>

        <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>